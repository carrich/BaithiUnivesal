<Page
    x:Class="Universal_baithi.trang1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Universal_baithi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="100">


        <StackPanel Orientation="Horizontal" >
            <TextBlock Margin="20 20 20 20">File Name</TextBlock>
            <TextBox x:Name="Name" PlaceholderText="myfile.txt" Margin="20 20 20 20"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="20 20 20 20">Content</TextBlock>
            <TextBox x:Name="Content" PlaceholderText="Hellow world" Margin="30,20,-336,20" HorizontalAlignment="Stretch" Height="98" VerticalAlignment="Stretch"></TextBox>
        </StackPanel>
        <Button Margin="130 0 0 0" Click="save">Save File</Button>

    </StackPanel>
</Page>
